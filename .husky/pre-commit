#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit hook: Zero-tolerance for warnings and build errors
echo "ğŸ” Running pre-commit checks..."

# Step 1: Run lint-staged (ESLint with --max-warnings 0)
echo "ğŸ“‹ Linting staged files..."
npx lint-staged

if [ $? -ne 0 ]; then
  echo "âŒ Lint failed! Fix all errors and warnings before committing."
  exit 1
fi

# Step 2: Run full build to catch any compilation errors
echo "ğŸ—ï¸  Running production build..."
npm run build

if [ $? -ne 0 ]; then
  echo "âŒ Build failed! Fix all build errors before committing."
  exit 1
fi

echo "âœ… All checks passed! Proceeding with commit..."
